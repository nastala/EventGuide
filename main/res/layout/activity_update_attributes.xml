<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_attributes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nastala.eventguide.UpdateAttributes">

    <CheckBox
        android:text="Music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:id="@+id/cbMusic" />

    <CheckBox
        android:text="Theater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbMusic"
        android:layout_alignParentStart="true"
        android:id="@+id/cbTheater" />

    <CheckBox
        android:text="Cinema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbTheater"
        android:layout_alignParentStart="true"
        android:id="@+id/cbCinema" />

    <CheckBox
        android:text="StandUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbCinema"
        android:layout_alignParentStart="true"
        android:id="@+id/cbStandup" />

    <CheckBox
        android:text="Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbStandup"
        android:layout_alignParentStart="true"
        android:id="@+id/cbGame" />

    <Button
        android:text="UPDATE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnUpdate"
        android:layout_below="@+id/cbGame"
        android:layout_toEndOf="@+id/cbStandup"
        android:layout_marginStart="29dp" />
</RelativeLayout>
